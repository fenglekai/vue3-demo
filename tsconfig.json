{
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext", // 解决import.meta报错
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node", // 解决node引用报错
        "types": ["vite/client"], // 解决import.meta.globEager报错
        "baseUrl": ".",
        "paths": { // 别名配置
            "@/*": ["*", "src/*"]
        },
        "lib": ["es5", "dom", "es2015"]
    }
}